{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "arkecosystem/crypto": "^1.3",
        "arkecosystem/fortify": "^1.0",
        "arkecosystem/ui": "^1.0",
        "bacon/bacon-qr-code": "^2.0",
        "blade-ui-kit/blade-icons": "^0.4.2",
        "brick/math": "^0.9.1",
        "doctrine/dbal": "^2.10",
        "fideloper/proxy": "^4.2",
        "fruitcake/laravel-cors": "^2.0",
        "genealabs/laravel-model-caching": "^0.11.0",
        "guzzlehttp/guzzle": "^6.5",
        "laravel/framework": "^8.1",
        "laravel/horizon": "^5.3",
        "laravel/telescope": "^4.0",
        "laravel/tinker": "^3.0",
        "livewire/livewire": "^2.0",
        "mattiasgeniar/php-percentages": "^1.1",
        "nyholm/psr7": "^1.3",
        "spatie/laravel-responsecache": "^6.6",
        "spatie/laravel-short-schedule": "^1.2",
        "symfony/psr-http-message-bridge": "^2.0"
    },
    "require-dev": {
        "arkecosystem/stan": "^1.3",
        "barryvdh/laravel-debugbar": "^3.5",
        "facade/ignition": "^2.3.6",
        "furqansiddiqui/bip39-mnemonic-php": "^0.1.3",
        "laravel/dusk": "^6.6"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "arkecosystem/fortify",
                "laravel/fortify"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan vendor:publish --provider=\"ARKEcosystem\\UserInterface\\UserInterfaceServiceProvider\" --tag=\"fonts\" --tag=\"pagination\" --tag=\"js\" --force",
            "@php artisan horizon:publish --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "build": [
            "composer format",
            "yarn format",
            "yarn prod"
        ],
        "format": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "fresh": [
            "php artisan migrate:fresh --seed"
        ],
        "test": [
            "./vendor/bin/pest --coverage --min=80 --coverage-html=.coverage --coverage-clover=coverage.xml"
        ],
        "play": [
            "@php artisan playbook:run DevelopmentPlaybook"
        ]
    }
}
